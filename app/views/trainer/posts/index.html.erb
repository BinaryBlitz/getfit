<h1>Posts</h1>

<%= link_to 'New Post', new_trainer_post_path, class: 'btn btn-default' %>

<table class="table">
  <thead>
    <tr>
      <th>Содержание</th>
      <th>Программа</th>
      <th>Дата создания</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.content, [:trainer, post] %></td>
        <td><%= post.program&.name %></td>
        <td><%= post.created_at.to_formatted_s(:short) %></td>
        <td><%= link_to 'Edit', edit_trainer_post_path(post), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', [:trainer, post], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
