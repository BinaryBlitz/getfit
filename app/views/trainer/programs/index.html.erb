<h1>Программы</h1>

<%= link_to 'Новая программа', new_trainer_program_path, class: 'btn btn-default' %>

<table class="table">
  <thead>
    <tr>
      <th>Название</th>
      <th>Описание</th>
      <th>Цена</th>
      <th>Тип</th>
      <th>Статус</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= link_to program.name, [:trainer, program] %></td>
        <td><%= truncate(program.preview, length: 20) %></td>
        <td><%= program.price %></td>
        <td><%= program.program_type&.name %></td>
        <td>
          <% if program.approved? %>
            <span class="label label-success">Одобрено</span>
          <% else %>
            <span class="label label-warning">Рассматривается</span>
          <% end %>
        </td>
        <td><%= link_to 'Изменить', edit_trainer_program_path(program), class: 'btn btn-default' %></td>
        <td><%= link_to 'Удалить', [:trainer, program], method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
