<h1><%= @program.name %></h1>

<div class="form-group">
  <%= link_to 'Изменить', edit_trainer_program_path, class: 'btn btn-secondary' %>
  <%= link_to 'Этапы', trainer_program_workouts_path(@program), class: 'btn btn-primary' %>

  <% if @program.subscription.present? %>
    <%= link_to 'Уведомить об изменениях',
                trainer_subscription_user_notifications_path(@program.subscription),
                method: :post,
                class: 'btn btn-primary' %>
  <% end %>
</div>

<dl class="row">
  <dt class="col-sm-3">Описание</dt>
  <dd class="col-sm-9"><%= @program.preview %></dd>

  <dt class="col-sm-3">Подробное описание</dt>
  <dd class="col-sm-9"><%= @program.description %></dd>

  <dt class="col-sm-3">Цена</dt>
  <dd class="col-sm-9"><%= @program.price %></dd>

  <dt class="col-sm-3">Тип</dt>
  <dd class="col-sm-9"><%= @program.program_type.name %></dd>

  <% if @program.banner? %>
    <dt class="col-sm-3">Баннер</dt>
    <dd class="col-sm-9"><%= image_tag @program.banner_url, class: 'img-fluid' %></dd>
  <% end %>
</dl>
