<h1>Тренировки</h1>

<%= link_to 'Новая тренировка', new_trainer_program_workout_path(@program), class: 'btn btn-default' %>

<table class="table">
  <thead>
    <tr>
      <th>Этап</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @workouts.each do |workout| %>
      <tr>
        <td><%= link_to "Этап #{workout.position}", trainer_workout_exercises_path(workout) %></td>
        <td><%= link_to 'Изменить', edit_trainer_workout_path(workout), class: 'btn btn-default' %></td>
        <td><%= link_to 'Удалить', [:trainer, workout], method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
