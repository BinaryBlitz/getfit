<h1>Тренировки</h1>

<div class="form-group">
  <%= link_to 'Новая тренировка', new_trainer_program_workout_path(@program), class: 'btn btn-primary' %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Этап</th>
      <th>Название</th>
      <th>Продолжительность</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @workouts.each do |workout| %>
      <tr>
        <td><%= workout.position %></td>
        <td><%= link_to workout.name, trainer_workout_exercises_path(workout) %></td>
        <td><%= workout.duration %></td>
        <td>
          <%= link_to 'Изменить',
                      edit_trainer_workout_path(workout),
                      class: 'btn btn-secondary btn-sm' %>
        </td>
        <td>
          <%= link_to 'Удалить',
                      [:trainer, workout], method: :delete, data: { confirm: 'Вы уверены?' },
                      class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
