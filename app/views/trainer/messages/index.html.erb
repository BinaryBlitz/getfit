<h1>Messages</h1>

<%= render 'form' %>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="col-xs-3">Отправитель</th>
      <th class="col-xs-9">Сообщение</th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <% next unless message.content.present? || message.image? %>
      <tr>
        <td class="col-xs-3">
          <%= message.category == 'user' ? @subscription.user.full_name : 'Тренер' %>
          <br>
          <span class="text-muted">
            <%= message.created_at.to_formatted_s(:short) %>
          </span>
        </td>
        <td class="col-xs-9">
          <%= message.content %>
          <% if message.image? %>
            <%= link_to message.image_url do %>
              <%= image_tag message.image.thumb.url, class: 'img-responsive' %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
