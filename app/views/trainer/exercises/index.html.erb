<h1>Этап <%= @workout.position %>: упражнения</h1>

<div class="form-group">
  <%= link_to 'Новое упражнение', new_trainer_workout_exercise_path, class: 'btn btn-primary' %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Тип упражнения</th>
      <th>Подходы</th>
      <th>Повторения</th>
      <th>Вес</th>
      <th>Дистанция</th>
      <th>Время</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.exercise_type.name %></td>
        <td><%= exercise.sets || '–' %></td>
        <td><%= exercise.reps || '–' %></td>
        <td><%= exercise.weight || '–' %></td>
        <td><%= exercise.distance || '–' %></td>
        <td><%= exercise.duration || '–' %></td>
        <td>
          <%= link_to 'Изменить',
                      edit_trainer_exercise_path(exercise),
                      class: 'btn btn-secondary btn-sm' %>
        </td>
        <td>
          <%= link_to 'Удалить',
                      [:trainer, exercise], method: :delete, data: { confirm: 'Вы уверены?' },
                      class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
