<dl class="row">
  <dt class="col-sm-3">Имя</dt>
  <dd class="col-sm-9"><%= user.first_name %></dd>

  <dt class="col-sm-3">Фамилия</dt>
  <dd class="col-sm-9"><%= user.last_name %></dd>

  <dt class="col-sm-3">Описание</dt>
  <dd class="col-sm-9"><%= user.description %></dd>

  <dt class="col-sm-3">Пол</dt>
  <dd class="col-sm-9"><%= user.gender %></dd>

  <dt class="col-sm-3">Высота</dt>
  <dd class="col-sm-9"><%= user.height %></dd>

  <dt class="col-sm-3">Вес</dt>
  <dd class="col-sm-9"><%= user.weight %></dd>

  <dt class="col-sm-3">Возраст</dt>
  <dd class="col-sm-9"><%= user.age %></dd>

  <% if user.avatar? %>
    <dt class="col-sm-3">Аватар</dt>
    <dd class="col-sm-9"><%= image_tag user.avatar_url, class: 'img-fluid' %></dd>
  <% end %>

  <% if user.banner? %>
    <dt class="col-sm-3">Баннер</dt>
    <dd class="col-sm-9"><%= image_tag user.banner_url, class: 'img-fluid' %></dd>
  <% end %>
</dl>
