<h1>Клиенты <small class="text-muted"><%= @subscriptions.count %></small></h1>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Пользователь</th>
      <th>Дата окончания</th>
      <th>Последнее сообщение</th>
    </tr>
  </thead>

  <tbody>
    <% @subscriptions.each_with_index do |subscription, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= link_to subscription.user.full_name, [:trainer, subscription] %></td>
        <td><%= subscription.expires_on.to_formatted_s %></td>
        <td><%= subscription.last_message_created_at&.to_formatted_s(:short) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
